datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String
  UserTeam UserTeam[] @relation(name: "UserId")
}

model Card {
  title       String
  id          String   @id @default(uuid())
  assigneeId  Int
  createdAt   DateTime @default(now())
  dueDateTime DateTime
  team_id     Int
  team        Team     @relation(name: "CardTeam", fields: [team_id], references: [id])
  status      Status   @default(Open)
  teamId      Int?
}

model Team {
  id       Int        @id @default(autoincrement())
  name     String
  UserTeam UserTeam[] @relation(name: "TeamId")
  Card     Card[]     @relation(name: "CardTeam")
}

model UserTeam {
  id      Int  @id @default(autoincrement())
  user_id Int
  team_id Int
  user    User @relation(name: "UserId", fields: [user_id], references: [id])
  team    Team @relation(name: "TeamId", fields: [team_id], references: [id])
}

enum Status {
  Open
  Done
  In_Progress
}
